class Solution {
    public int[] searchRange(int[] nums, int target) {
       int[] arr = {-1, -1};
        int start=findIndex(nums,target,true);
        int end=findIndex(nums,target,false);
        arr[0]=start;
        arr[1]=end;
        return arr;   
    }
    private static int findIndex(int[] nums,int target,boolean isFirstIndex){
        int start = 0, end = nums.length - 1;
        int ans=-1;
        while (start <= end) {
            int mid = start + (end - start) / 2;
            if (nums[mid] > target)
                end = mid - 1;
            else if(nums[mid]<target)
                start = mid + 1;
            else {
                //found potential answer
                ans=mid;
                if(isFirstIndex)
                    end=mid-1;
                else
                    start=mid+1;
            }
        }
        return ans;
    }
}
